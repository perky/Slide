<% title "Forum Posts" %>

<table>
  <tr>
    <th>Content</th>
    <th>User</th>
    <th>Thread</th>
  </tr>
  <% for forum_post in @forum_posts %>
    <tr>
      <td><%= forum_post.content %></td>
      <td><%= forum_post.user_id %></td>
      <td><%= forum_post.forum_thread_id %></td>
      <td><%= link_to "Show", forum_post %></td>
      <td><%= link_to "Edit", edit_forum_post_path(forum_post) %></td>
      <td><%= link_to "Destroy", forum_post, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Forum Post", new_forum_post_path %></p>
