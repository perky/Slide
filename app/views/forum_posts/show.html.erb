<% title "Forum Post" %>

<p>
  <strong>Content:</strong>
  <%= @forum_post.content %>
</p>
<p>
  <strong>User:</strong>
  <%= @forum_post.user_id %>
</p>
<p>
  <strong>Thread:</strong>
  <%= @forum_post.thread_id %>
</p>

<p>
  <%= link_to "Edit", edit_forum_post_path(@forum_post) %> |
  <%= link_to "Destroy", @forum_post, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", forum_posts_path %>
</p>
