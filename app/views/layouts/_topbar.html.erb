<div id="top_bar">
	<div id="title">
		<h1 id="logo"> <%= link_to "Slide", root_path %> </h1>
		<h2 id="tagline"> An elegant forum on rails </h2>
	</div>
	<div id="nav">
		<% if logged_in? then %>
            <%= link_to "New thread", new_forum_thread_path %>
			<%= link_to 'Logout', logout_path, :id => "Logout" %>
		<% else %>
			<%= link_to "Login", login_path %>
            <%= link_to "Signup", signup_path %>
		<% end %>
		<a href="#">Search all threads</a>
		<a href="#">Search current thread</a>
	</div>
</div>